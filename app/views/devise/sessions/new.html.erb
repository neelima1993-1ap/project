<%= form_for(resource, as: resource_name, url: session_path(resource_name) , html: {class: "form-signin"}) do |f| %>
<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    <%= f.label "Email address", :email, class: "sr-only" %><br />
    <%= f.email_field :email, class: "form-control" , placeholder: "Email address" %>

    <%= f.label "Password", :password , class: "sr-only"%><br />
    <%= f.password_field :password, class: "form-control" , placeholder: "Password" %>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block", type: "submit" %>
  </div>
  <p class="mt-5 mb-3 text-muted">&copy; 2017-2019</p>

<%= render "devise/shared/links" %>
<% end %>
