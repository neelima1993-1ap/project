<%
scopes = [
  ["India", "india"],
  ["Country2", "country2"],
  ["Country3", "country3"],
  ["Country4", "country4"],
  ["Country5", 'country5']
]
%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
<h1 class="h3 mb-3 font-weight-normal">Sign up</h1>
  <%= render "devise/shared/error_messages", resource: resource %>
 
    <%= f.text_field :first_name, class: "form-control", autofocus: true ,placeholder: "Name*" %></br>

    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" ,placeholder: "Email" %></br>

    
    <%= f.text_field :phone, class: "form-control", autofocus: true,placeholder: "Phone*" %></br>

    <%= f.text_field :city, class: "form-control", autofocus: true,placeholder: "City*" %></br>
    <%#= f.text_field :city, class: "form-control", autofocus: true,placeholder: "Country*" %></br>
    Country <%= f.select :country, options_for_select(scopes),class: "form-control" %></p>
    <%= f.text_field :user_name, class: "form-control", autofocus: true,placeholder: "Username*" %></br>
    

    <%= f.label :password  , class: "sr-only" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" , class: "form-control" , placeholder: "Password*" %>

    <%= f.label :password_confirmation , class: "sr-only" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control" , placeholder: "Confirm Password" %>


  <div class="actions">
    <%= f.submit "Register" ,class: "btn btn-lg btn-primary btn-block", type: "submit" %>
  </div>
<%= render "devise/shared/links" %>

<% end %>
